<IfModule mod_headers.c>
    # Instruct Apache to handle OPTIONS requests (the preflight)
    <LimitExcept OPTIONS>
        Header always set Access-Control-Allow-Origin "http://192.168.1.203"
        Header always set Access-Control-Allow-Methods "POST, OPTIONS"
        Header always set Access-Control-Allow-Headers "Content-Type"
    </LimitExcept>
    # Handle the OPTIONS request itself
    <Limit OPTIONS>
        Header always set Access-Control-Allow-Origin "http://192.168.1.203"
        Header always set Access-Control-Allow-Methods "POST, OPTIONS"
        Header always set Access-Control-Allow-Headers "Content-Type"
        Header always set Content-Length "0"
        Header always set Content-Type "text/plain"
        Require all granted
    </Limit>
</IfModule>
